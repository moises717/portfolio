---
import { type Skill } from '../data/skill';
import SkillBadge from './SkillBadge.astro';

interface Props {
	title: string;
	list: Skill[];
}
const { title, list } = Astro.props;
---

<h3 class='text-md font-semibold text-gray-700 mt-3 dark:text-gray-300'>{title}</h3>
<div class='flex gap-2 flex-wrap'>
	{list.map(skill => <SkillBadge {...skill} />)}
</div>
