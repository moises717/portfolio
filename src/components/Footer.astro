---
import Section from './Section.astro';
import { getI18N } from '@/i18n/index';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Section>
	<footer class='flex flex-col md:flex-row items-center justify-between w-full gap-3 md:gap-0'>
		<span>
			Inspired by <a href='https://porfolio.dev/' target='_blank' class='text-blue-600' rel='noopener noreferrer'>Porfolio.dev ❤️</a>
		</span>
		<ul class='flex gap-4 md:ml-24'>
			<li>
				<a href='#home' class='text-blue-600' aria-label='Inicio'>{i18n.HEADER.NAV.HOME}</a>
			</li>
			<li>
				<a href='#projects' class='text-blue-600'>{i18n.HEADER.NAV.PROJECTS}</a>
			</li>
			<li>
				<a href='#skills' class='text-blue-600'>{i18n.HEADER.NAV.SKILLS}</a>
			</li>
		</ul>
	</footer>
</Section>
