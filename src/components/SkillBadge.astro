---
import { cn } from '@/utils/cn';

interface Props {
	name: string;
	icon: string;
	className?: string;
}

const { name, icon, className } = Astro.props;
const iconPath = `https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/`;
const iconUrl = `${iconPath}${icon.split('-')[0]}/${icon}`;
---

<div class={cn('flex items-center justify-center p-3 h-12 bg-gray-100 rounded-md mt-3 shadow-sm gap-3', className)}>
	<img class='w-6 h-6' src={iconUrl} alt={icon} />
	<span>{name}</span>
</div>
